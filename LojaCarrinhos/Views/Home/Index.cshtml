@model IEnumerable<LojaCarrinhos.Models.Produto>
@{
    ViewData["Title"] = "Página Inicial";
}
<head>
    <link rel="stylesheet" href="~/css/estilo.css" />
</head>

<!-- NAVBAR -->
<nav class="navbar navbar-expand-lg navbar-dark navbar-custom fixed-top">
    <div class="container">
        <a class="navbar-brand fw-bold" href="/">Lojinha de miniaturas</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link active" href="/">Início</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Carrinho" asp-action="Index">🛒 Carrinho</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<!-- CONTEÚDO -->
<div class="container mt-5 pt-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-gradient">Nossos Produtos</h1>
        <p class="lead text-muted">Escolha sua miniatura favorita e adicione ao carrinho!</p>
    </div>

    <div class="row g-4">
        @foreach (var produto in Model)
        {
            <div class="col-md-4 col-sm-6">
                <div class="card produto-card h-100 shadow-sm border-0">
                    <img src="@produto.ImageUrl" class="card-img-top" alt="@produto.Nome">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-semibold">@produto.Nome</h5>
                        <p class="card-text text-muted">@produto.Descricao</p>
                        <p class="card-text preco">R$ @produto.Preco.ToString("F2")</p>
                        <p class="card-text"><small class="text-muted">Estoque: @produto.Estoque</small></p>

                        <form asp-controller="Carrinho" asp-action="AdicionarCarrinho" method="post" class="mt-auto">
                            <input type="hidden" name="produtoId" value="@produto.Id" />
                            <div class="form-group mb-2">
                                <label for="quantidade-@produto.Id" class="form-label">Quantidade:</label>
                                <input type="number" id="quantidade-@produto.Id"
                                       name="quantidade"
                                       class="form-control form-control-sm"
                                       value="1"
                                       min="1"
                                       max="@produto.Estoque" />
                            </div>
                            <button type="submit" class="btn btn-add">Adicionar ao Carrinho</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
